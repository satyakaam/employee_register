<h5 class="mb-5">Edit event</h5>
<% if @event.errors.any? %>
  <div class="text-danger">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li> * <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @event, url: admins_user_event_path(@user, @event), html: { class: "form-horizontal center" } do |f| %>
  <div class="form-group">
    <%= f.label :occurred_at, class: "control-label" %>
    <%= f.text_field :occurred_at, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
<% end %>

<script>
  $(function() {
    $('#event_occurred_at').daterangepicker({
      singleDatePicker: true,
      timePicker: true,
      showDropdowns: true,
      locale: {
        format: 'YYYY/MM/DD hh:mm A'
      }
    });
  });
</script>
