<h5 class="mb-5">Add new user</h5>
<% if @user.errors.any? %>
  <div class="text-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li> * <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @user, url: admins_users_path(@user), html: { class: "form-horizontal center" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name:", class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email:", class: "control-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password:", class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <div class="form-check form-check-inline">
      <%= f.radio_button :admin, 'yes', checked: true, class: "form-check-input" %>
      <%= f.label :admin, "Admin", class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :admin, 'no', checked: true, class: "form-check-input" %>
      <%= f.label :user, "User", class: "form-check-label" %>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
<% end %>
